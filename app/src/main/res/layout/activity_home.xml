<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/app_background"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

   <TextView
       android:id="@+id/tv_question_title"
       android:layout_width="match_parent"
       android:text="Question 1"
       android:background="#1A000000"
       android:padding="20dp"
       android:textColor="#ffffff"
       android:layout_marginHorizontal="10dp"
       android:layout_above="@+id/ll_content"
       android:layout_marginBottom="10dp"
       android:layout_height="wrap_content" />
   <LinearLayout
       android:id="@+id/ll_content"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_centerVertical="true"
       android:layout_marginHorizontal="10dp"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_option_a"
           android:layout_width="match_parent"
           android:text="Câu số 1"
           android:textColor="#000000"
           android:layout_marginBottom="5dp"
           android:background="@drawable/button_background_v1"
           android:layout_below="@+id/tv_quiz_app"
           android:layout_height="wrap_content" />
       <Button
           android:id="@+id/btn_option_b"
           android:layout_width="match_parent"
           android:text="Câu số 1"
           android:textColor="#000000"
           android:layout_marginBottom="5dp"
           android:background="@drawable/button_background_v1"
           android:layout_below="@+id/tv_quiz_app"
           android:layout_height="wrap_content" />
       <Button
           android:id="@+id/btn_option_c"
           android:layout_width="match_parent"
           android:text="Câu số 1"
           android:textColor="#000000"
           android:layout_marginBottom="5dp"
           android:background="@drawable/button_background_v1"
           android:layout_below="@+id/tv_quiz_app"
           android:layout_height="wrap_content" />
       <Button
           android:id="@+id/btn_option_d"
           android:layout_width="match_parent"
           android:text="Câu số 1"
           android:textColor="#000000"
           android:layout_marginBottom="5dp"
           android:background="@drawable/button_background_v1"
           android:layout_below="@+id/tv_quiz_app"
           android:layout_height="wrap_content" />
   </LinearLayout>



</RelativeLayout>